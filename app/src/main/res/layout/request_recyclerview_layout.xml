<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="2dp"
            android:id="@+id/notgointerer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/goingthere"
            android:layout_alignParentStart="true"
            android:layout_marginStart="123dp"
            android:text="Not Going"
            android:textSize="18sp" />

        <TextView
            android:padding="2dp"
            android:id="@+id/goingthere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerimageview"
            android:layout_alignParentStart="true"
            android:text="Going"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/recyclerimageview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/recyclerdescription"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/recyclerimageview"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@+id/recyclerimageview"
            android:padding="15dp"
            android:text="Description"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/going"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/notgointerer"
            android:layout_toEndOf="@+id/notgointerer"
            android:src="@drawable/going" />

        <ImageView
            android:id="@+id/notgoing"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/goingthere"
            android:layout_toEndOf="@+id/goingthere"
            android:src="@drawable/notgoing" />

    </RelativeLayout>

</android.support.v7.widget.CardView>