<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/logintitile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:padding="4dp"
        android:text="Login"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/logincardview"
        android:layout_width="match_parent"
        android:layout_below="@+id/logintitile"
        android:layout_marginTop="32dp"
        android:layout_height="250dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp"
        android:layout_marginRight="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/em"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_margin="8dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
            <EditText

                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/em"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_alignStart="@+id/em"
                android:text="Password"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pass"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/buttoncardview"
        app:cardElevation="16dp"
        app:cardCornerRadius="24dp"
        android:layout_below="@id/logincardview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Login"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/buttonstyle" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttoncardview"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="Or" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:text="SignUp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16dp" />
</RelativeLayout>