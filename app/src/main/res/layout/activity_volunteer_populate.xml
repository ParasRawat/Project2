<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolunteerPopulate">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/volunteerpopulateimageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volunteerpopulateimageview"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textColor="@color/colorAccent"
        android:padding="8dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volunteerpopulateimageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:padding="4dp"
        android:text="Country"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_centerHorizontal="true"
        android:id="@+id/currentstatus"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="Current Status" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/profiledescriptionhead"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentstatus"
        android:layout_alignParentStart="true"
        android:text="Profile Description" />

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/volunteerdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/profiledescriptionhead"
        android:layout_alignParentStart="true"
        android:text="Layout for description" />

</RelativeLayout>